{
  "rules": {
    "react/jsx-filename-extension": "off",
    "@typescript-eslint/ban-ts-comment": 0
  },
  "extends": "vtex-react",
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "parser": "babel-eslint",
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
